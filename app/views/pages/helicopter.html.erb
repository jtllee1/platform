<%= javascript_pack_tag 'helicopter', 'data-turbolinks-track': 'reload', defer: true %>

<div class="title">
  <h1><%= link_to "Helicopter", root_path %></h1>
</div>

<div class="main">
  <div id="grids-heli">
    <% row = 1 %>
    <% i = 1 %>
    <% 20.times do %>
      <% column = 1 %>
      <% 20.times do %>
        <div id="<%= i %>" class="grid-heli <%= i == 381 ? "active" : "" %> r-<%= row %> c-<%= column %>"></div>
        <% i += 1 %>
        <% column += 1 %>
      <% end %>
      <% row += 1 %>
    <% end %>
  </div>

  <div class="data">
    <a><b>Score:</b></a>
    <div id="score">0</div>
    <div id="start">Start</div>
  </div>
</div>
