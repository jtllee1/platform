<div data-controller="tetris">
  <div class="title">
    <h1 id="name"><%= link_to "Tetris", root_path %></h1>
  </div>

  <audio class="bg-music invisible" controls loop preload="none">
      <source src="<%= asset_path('tetris-music.mp3') %>" type="audio/mpeg">
  </audio>

  <div class="main">
    <div id="grids-tetris">
      <% row = 1 %>
      <% i = 1 %>
      <% 20.times do %>
        <% column = 1 %>
        <% 16.times do %>
          <div id="<%= i %>" class="grid-tetris <%= column == 1 ? "left-boundary" : "" %>
            <%= column == 16 ? "right-boundary" : "" %> <%= row == 1 ? "up-boundary" : "" %>
            <%= row == 20 ? "down-boundary" : "" %>"></div>
          <% i += 1 %>
          <% column += 1 %>
        <% end %>
        <% row += 1 %>
      <% end %>
    </div>

    <div class="data">
      <a><b>Score:</b></a>
      <div id="score">0</div>
      <div id="start">Start</div>
      <div class="instructions">
        <a>Move using left/right/down and press up/space to rotate.</a>
      </div>
    </div>
  </div>
</div>
