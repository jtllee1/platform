<div class="title">
  <h1 id="name"><%= link_to "Pong", root_path %></h1>
</div>

<div id="game-state" class="invisible">Off</div>

<audio class="paddle invisible" controls preload="none">
    <source src="<%= asset_path('ball-paddle.mp3') %>" type="audio/mpeg">
</audio>

<audio class="brick invisible" controls preload="none">
    <source src="<%= asset_path('ball-brick.mp3') %>" type="audio/mpeg">
</audio>

<div class="main">
  <div id="grids-pong">
    <% row = 1 %>
    <% i = 1 %>
    <% 20.times do %>
      <% column = 1 %>
      <% 30.times do %>
        <div id="<%= i %>" class="grid-pong <%= i == 583 || i == 584 || i == 585 || i == 586 || i == 587 ? "active" : "" %>
          <%= i == 555 ? "ball" : "" %> <%= column == 1 ? "left-boundary" : "" %>
          <%= column == 30 ? "right-boundary" : "" %> <%= row == 1 ? "up-boundary" : "" %>
          <%= row == 20 ? "down-boundary" : "" %>"><% i %></div>
        <% i += 1 %>
        <% column += 1 %>
      <% end %>
      <% row += 1 %>
    <% end %>
  </div>

  <div class="data">
    <a><b>Lives:</b></a>
    <div class="lives">
      <div class="life"></div>
      <div class="life"></div>
      <div class="life"></div>
    </div>
    <div id="start">Restart</div>
    <div class="instructions">
      <a>Move using the arrow keys and press space launch the ball.</a>
    </div>
  </div>
</div>
