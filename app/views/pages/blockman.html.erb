<div class="title">
  <h1 id="name"><%= link_to "Blockman", root_path %></h1>
</div>

<div class="shoot-status-1 invisible">on</div>
<div class="shoot-status-2 invisible">on</div>
<div class="collision-status-1 invisible">off</div>
<div class="collision-status-2 invisible">off</div>

<div class="container blockman">
  <div class="health health-1">
    <div class="outer">
      <div class="desc">Player 1</div>
    </div>
    <div class="lives">
      <div class="life"></div>
      <div class="life"></div>
      <div class="life"></div>
    </div>
  </div>

  <% layer = 1 %>

  <div class="wrapper">
    <div class="platform-area">
      <div class="cube cube-player">
        <div class="box front middle"></div>
        <div class="box right middle"></div>
        <div class="box back middle"></div>
        <div class="box left middle"></div>
        <div class="box bottom middle"></div>
        <div class="box top middle"></div>
      </div>

      <div class="cube cube-enemy">
        <div class="box front middle"></div>
        <div class="box right middle"></div>
        <div class="box back middle"></div>
        <div class="box left middle"></div>
        <div class="box bottom middle"></div>
        <div class="box top middle"></div>
      </div>

      <div class="cube laser laser-1"></div>
      <div class="cube laser laser-2"></div>

      <% i = 0 %>
      <% 9.times do %>
        <% position = 0 %>
        <% 5.times do %>
          <div class="cube cube-<%= i %>">
            <div class="box l-<%= layer %> p-<%= position %> front"></div>
            <div class="box l-<%= layer %> p-<%= position %> right"></div>
            <div class="box l-<%= layer %> p-<%= position %> back"></div>
            <div class="box l-<%= layer %> p-<%= position %> left"></div>
            <div class="box l-<%= layer %> p-<%= position %> bottom"></div>
            <div class="box l-<%= layer %> p-<%= position %> top"></div>
          </div>
          <% i += 1 %>
          <% position += 1 %>
        <% end %>
        <% layer += 1 %>
      <% end %>
    </div>
  </div>

  <div class="health health-2">
    <div class="outer">
      <div class="desc">Player 2</div>
    </div>
    <div class="lives">
      <div class="life"></div>
      <div class="life"></div>
      <div class="life"></div>
    </div>
  </div>

  <div class="data">
    <div class="instructions">
      <a>Press arrow keys to move and SPACE to fire at the opponent.</a>
    </div>
    <div id="start">Start</div>
  </div>
</div>
